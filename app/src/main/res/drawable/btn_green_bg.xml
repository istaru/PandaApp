<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--按下的颜色-->
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <corners
                android:topLeftRadius="25dp"
                android:topRightRadius="25dp"
                android:bottomLeftRadius="25dp"
                android:bottomRightRadius="25dp" />
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
            <solid android:color="@color/btn_green_us" />
        </shape>
    </item>

    <!--松开的颜色-->
    <item android:state_enabled="false">
        <shape
            android:shape="rectangle">
            <corners
                android:topLeftRadius="25dp"
                android:topRightRadius="25dp"
                android:bottomLeftRadius="25dp"
                android:bottomRightRadius="25dp" />
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
            <solid android:color="@color/btn_green_s" />
        </shape>
    </item>

    <!--默认的颜色-->
    <shape
        android:shape="rectangle">
        <corners
            android:topLeftRadius="25dp"
            android:topRightRadius="25dp"
            android:bottomLeftRadius="25dp"
            android:bottomRightRadius="25dp" />
        <padding
            android:bottom="2dp"
            android:left="2dp"
            android:right="2dp"
            android:top="2dp" />
        <solid android:color="@color/btn_green_s" />
    </shape>
</selector>